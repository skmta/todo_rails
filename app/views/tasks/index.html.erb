<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h4><%= link_to "new", new_task_path %></h4>

 <% @tasks.each do |task| %>
  <ul>
  	<li><%= task.title %></li>
  	<li><%= task.description %></li>
  	<li><%= task.due_date %></li>
  	<li><%= link_to "edit", "/tasks/edit" %></li>
	<li><%= link_to "delete", task_path(task), method: :delete %></li>
  </ul>
<%end%>
<!-- 終わったタスクページへ -->
<h4><%= link_to "done", "/done" %></h4>